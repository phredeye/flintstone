{
  "name": "phredeye/website",
  "type": "project",
  "license": "MIT",
  "description": "A wordpress website",
  "homepage": "https://fredisaacs.com/",
  "authors": [
    {
      "name": "Fred Isaacs",
      "email": "hello@fredisaacs.com",
      "homepage": "https://fredisaacs.com"
    }
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org",
      "only": ["wpackagist-plugin/*", "wpackagist-theme/*"]
    }
  ],
  "require": {
    "php": ">=7.4",
    "composer/installers": "^1.10",
    "vlucas/phpdotenv": "^5.3",
    "oscarotero/env": "^2.1",
    "roots/bedrock-autoloader": "^1.0",
    "roots/wordpress": "5.6.2",
    "roots/wp-config": "1.0.0",
    "roots/wp-password-bcrypt": "1.0.0",
    "wpackagist-plugin/disable-gutenberg": "^2.4"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.5.8",
    "roave/security-advisories": "dev-master",
    "wpackagist-plugin/fakerpress": "^0.5.1",
    "wpackagist-plugin/rest-api-console": "^2.1"
  },
  "autoload": {
    "psr-4": {
      "Phredeye\\Flintstone\\": "support/src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Phredeye\\Flintstone\\": "support/test"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "web/wp"
  },
  "scripts": {
    "post-root-package-install": [
      "php -r \"copy('.env.example', '.env');\""
    ],
    "test": [
      "phpcs"
    ]
  }
}
